<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.mybatisplusdemo.mapper.UserMapper">
    <sql id="Base_Column">
        uid, user_name, phone_number, gender, create_time, update_time, is_deleted, age
    </sql>
    <select id="selectAllByName" resultType="com.example.mybatisplusdemo.entity.User">
        select <include refid="Base_Column"/>
        from t_user
        where user_name = #{userName}
    </select>
    <select id="selectPageByAge" resultType="com.example.mybatisplusdemo.entity.User">
        select <include refid="Base_Column"/>
        from t_user
        where age > #{age}
    </select>
</mapper>